{
  "name": "csoverflow",
  "version": "1.0.0",
  "description": "Form for computer science students.",
  "main": "server/server.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=production node prod/server.js",
    "server": "nodemon server/server.ts",
    "server:install": "npm install",
    "server:build": "tsc -p tsconfig.prod.json",
    "format": "prettier --write \"server/**/*.{ts,tsx,js,jsx}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adarshaacharya/csoverflow.git"
  },
  "keywords": [
    "csoverflow"
  ],
  "author": "Aadarsha <connectwithadarsha@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adarshaacharya/csoverflow/issues"
  },
  "homepage": "https://github.com/adarshaacharya/csoverflow#readme",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.0",
    "@types/fs-extra": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "pg": "^8.4.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/node": "^14.11.8",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "husky": "^4.3.0",
    "nodemon": "^2.0.5",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ],
    "watch": [
      "server/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
